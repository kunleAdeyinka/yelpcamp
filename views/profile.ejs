<% include ./partials/header %> 

<div class="row">
    <div class="col-md-4">
        <h1><%= user.firstName + " " + user.lastName %></h1>
        <div class="thumbnail">
                <img src="<%= user.avatar %>" alt="user profile image" class="img-thumbnail">
                <div class="captin"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
        </div>   
